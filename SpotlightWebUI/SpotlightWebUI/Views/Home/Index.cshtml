    ViewBag.Title = "Home Page";
}
<style type="text/css">
    .jumbotron {
        color: #000;
        padding: 10px 40px;
    }

        .jumbotron h1 {
            font-family: 'Elephant';
            font-size: 2em;
        }

        .jumbotron .btn {
            padding: 2px 10px;
            font-size: 1.2em;
            font-weight: bold;
        }

    h1#title {
        font-family: 'Elephant';
        font-size: 2em;
    }

    div#myCarousel {
    }

        div#myCarousel img {
            width: 100%;
        }

        div#myCarousel h4 {
            font-family: 'Elephant';
            font-size: 2em;
        }

        div#myCarousel .carousel-caption {
            left: 70%;
            top: 5%;
            right: 5%;
            text-shadow: none !important;
            text-align: left;
        }

            div#myCarousel .carousel-caption .alert-info {
                padding: 30px;
                opacity: .90;
            }

                div#myCarousel .carousel-caption .alert-info .service-desc {
                    font-family: 'Shrikhand', cursive;
                    font-size: 1.5em;
                }

    .service-icon img {
        max-height: 150px;
        margin: 0 auto;
    }

    .service-icon h2 {
        margin-top: 0;
        font-family: 'Elephant';
        font-size: 1.5em;
    }

    blockquote#quote {
        font-family: 'Shrikhand', cursive;
        font-size: 3em;
        margin: 25px 100px;
    }
</style>
