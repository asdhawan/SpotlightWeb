@model SpotlightWebUI.Models.ContactForm

@{
    ViewBag.Title = "Contact Us";
}

<style type="text/css">
    .input-group .form-control.input-validation-error {
        background-color: #f2dede;
    }

    .input-group .alert {
        padding: 0;
        border: none;
    }

        .input-group .alert.field-validation-error {
            border: 1px solid #ebccd1;
            position: absolute;
            bottom: -19px;
            right: 0;
            margin-top: 30px;
            font-size: 1rem;
            z-index: 2;
            padding: 0 5px;
            border-top-left-radius: 0;
            border-bottom-left-radius: 0;
            font-weight: bold;
            bottom: -34px;
            line-height: 1.3em;
        }

        .well {
            opacity: 1;
        }
</style>

<h2>@ViewBag.Title</h2>
<h3>Spotlight Entertainment Services</h3>

<div class="row">
    <div class="col-lg-4 text-center">
        <div class="center-block well well-sm">
            <address class="text-primary">
                <a class="" target="_blank" href="https://www.google.com/maps/dir/235+Grand+Prix+Ave,+Manteca,+CA+95337">
                    235 Grand Prix Ave<br />
                    Manteca, California 95337
                </a><br />
                <i class="fa fa-phone"></i> <a href="tel:+12098588219">(209) 858-8219</a>
                <br />
                <i class="fa fa-envelope"></i> <a href="mailto:#">contact@spotlightentertain.com</a>
                <br />
            </address>
            <a href="https://www.facebook.com/Spotlight-Entertainment-Services-319479885232657" target="_blank" class="btn btn-lg btn-default"><img src="~/Content/images/FB-FindUsonFacebook-online-144.png" /></a>
        </div>
    </div>
    <div class="col-lg-8 text-center">
        <div class="center-block well well-sm form-horizontal">
            @using (Html.BeginForm("Index", "Login", new { returnUrl = ViewBag.ReturnUrl }, FormMethod.Post)) {
                @Html.AntiForgeryToken()

                @*@Html.HiddenFor(model => model.ReturnUrl);*@

                <div class="form-group">
                    <label class="col-md-4 control-label text-primary">@Html.LabelFor(model => model.FirstName)</label>
                    <div class="col-md-8 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", @placeholder = "First Name" } })
                        </div>
                    </div>
                </div>

                <!-- Text input-->


                <div class="form-group">
                    <label class="col-md-4 control-label text-primary">@Html.LabelFor(model => model.LastName)</label>
                    <div class="col-md-8 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Last Name" } })
                        </div>
                    </div>
                </div>

                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-4 control-label text-primary">@Html.LabelFor(model => model.EmailAddress)</label>
                    <div class="col-md-8 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                            @Html.EditorFor(model => model.EmailAddress, new { htmlAttributes = new { @class = "form-control", @placeholder = "E-Mail Address" } })
                        </div>
                    </div>
                </div>


                <!-- Text input-->

                <div class="form-group">
                    <label class="col-md-4 control-label text-primary">@Html.LabelFor(model => model.PhoneNumber)</label>
                    <div class="col-md-8 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-earphone"></i></span>
                            @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control", @placeholder = "(845) 555-1212" } })
                        </div>
                    </div>
                </div>

                <!-- Text input-->

                <div class="form-group">
                    <label class="col-md-4 control-label text-primary">Address</label>
                    <div class="col-md-8 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-home"></i></span>
                            <input name="address" placeholder="Address" class="form-control" type="text">
                        </div>
                    </div>
                </div>

                <!-- Text input-->

                <div class="form-group">
                    <label class="col-md-4 control-label text-primary">City</label>
                    <div class="col-md-8 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-home"></i></span>
                            <input name="city" placeholder="city" class="form-control" type="text">
                        </div>
                    </div>
                </div>

                <!-- Select Basic -->

                <div class="form-group">
                    <label class="col-md-4 control-label text-primary">State</label>
                    <div class="col-md-8 selectContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
                            <select name="state" class="form-control selectpicker">
                                <option value=" ">Please select your state</option>
                                <option>Alabama</option>
                                <option>Alaska</option>
                                <option>Arizona</option>
